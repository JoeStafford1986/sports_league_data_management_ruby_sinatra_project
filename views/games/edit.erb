<form method="post" action="/games/<%=@game.id%>/edit">

  <label> Team 1:
    <select name="team1_id" id="team1_id_select" selected="<%= @game.team1_id  %>">
      <% for team in @teams %>
        <% if team.id == @game.team1_id %>
          <option value=<%= team.id %> selected><%= team.name %></option>
        <% else %>
          <option value=<%= team.id %>><%= team.name %></option>
        <% end %>
      <% end %>
    </select>
  </label>

  <label> Team 2:
    <select name="team2_id" id="team2_id_select" selected="<%= @game.team2_id  %>">
      <% for team in @teams %>
        <% if team.id == @game.team2_id %>
          <option value=<%= team.id %> selected><%= team.name %></option>
        <% else %>
          <option value=<%= team.id %>><%= team.name %></option>
        <% end %>
      <% end %>
    </select>
  </label>

  <label for="team1_score">Team 1 Score:</label>
  <input type="number" name="team1_score" id="team1_score" value="<%=  @game.team1_score %>">

  <label for="team2_score">Team 2 Score:</label>
  <input type="number" name="team2_score" id="team2_score" value="<%=  @game.team2_score %>">

  <label for="date_of_game">Date of game:</label>
  <input type="date" required="required" name="date_of_game" id="date_of_game" value="<%=  @game.date_of_game %>">

  <input type="submit"  value="Edit Game">

</form>
